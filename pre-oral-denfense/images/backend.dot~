digraph G {
        node[shape=box];
        vm[label="Core Virtual Machine"];
        rt[label="Runtime System"];
        scheduler[label="Task Scheduler"];
        mm[label="Memory Manager"];
        driver[label="VP Driver"];
        cpu[label="Multi-processor\nMulti-core"];
        gpu[label="GPU"];
        others[label="Other\nAccelerators"];

        vm -> rt;
        rt -> driver;
        rt -> scheduler;
        rt -> mm;
        driver -> cpu;
        driver -> gpu;
        driver -> others;
}